{
  "swagger": "2.0.0",
  "info": {
    "version": "1.0.11",
    "title": "Recipe collector",
    "description": "An API with collected recipes from all over the world",
    "license": {
      "name": "MIT",
      "url": "https://opensource.org/licenses/MIT"
    },
    "contact": {
      "name": "Hagen",
      "email": "hagen-brandt@web.de"
    }
  },
  "host": "localhost:8080",
  "basePath": "/",
  "tags": [
    {
      "name": "Recipes",
      "description": "API for collected recipes"
    }
  ],
  "schemes": ["Recipe", "User"],
  "servers": { "url": "https://localhost:8080" },
  "consumes": ["application/json"],
  "produces": ["application/json"],
  "paths": {
    "/api/recipes": {
      "get": {
        "tags": ["Recipes"],
        "summary": "Get all recipes",
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "$ref": "#/definitions/Recipes"
            }
          }
        }
      }
    }
  },
  "definitions": {
    "Ingredient": {
      "required": ["name", "quantity", "unit"],
      "properties": {
        "name": {
          "type": "string"
        },
        "quantity": {
          "type": "integer"
        },
        "unit": {
          "type": "string"
        },
        "alternative": {
          "type": "array"
        }
      }
    },
    "Recipe": {
      "required": [
        "_id",
        "__v",
        "title",
        "ingredients",
        "description",
        "isPublic",
        "owner"
      ],
      "properties": {
        "_id": {
          "type": "integer",
          "uniqueItems": true
        },
        "__v": {
          "type": "integer"
        },
        "title": {
          "type": "string"
        },
        "ingredients": {
          "type": "array",
          "$ref": "#/definitions/Ingredient"
        },
        "tags": {
          "type": "array"
        },
        "description": {
          "type": "string"
        },
        "cookingTime": {
          "type": "string"
        },
        "isPublic": {
          "type": "boolean"
        },
        "owner": {
          "type": "integer"
        },
        "rating": {
          "type": "array"
        }
      }
    },
    "Recipes": {
      "type": "array",
      "$ref": "#/definitions/User"
    },
    "User": {
      "required": [
        "_id",
        "__v",
        "userName",
        "email",
        "password",
        "checkPassword",
        "createdRecipes"
      ],
      "properties": {
        "_id": {
          "type": "integer",
          "uniqueItems": true
        },
        "__v": {
          "type": "integer"
        },
        "userName": {
          "type": "string"
        },
        "email": {
          "type": "string"
        },
        "password": {
          "type": "string"
        },
        "checkPassword": {
          "type": "Promise<boolean>"
        },
        "createdRecipes": {
          "type": "array"
        },
        "bookMarked": {
          "type": "array"
        },
        "rated": {
          "type": "array"
        }
      }
    }
  }
}
